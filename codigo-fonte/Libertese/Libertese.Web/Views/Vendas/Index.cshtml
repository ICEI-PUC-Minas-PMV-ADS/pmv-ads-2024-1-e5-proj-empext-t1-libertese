@model IEnumerable<Libertese.ViewModels.VendaViewModel>

@{
    ViewData["Title"] = "Vendas";
    Layout = "~/Views/Shared/_LayoutProdutos.cshtml";

    int total = 0;
    foreach (var item in Model)
    {
        total++;
    }
}

<body class="font-inter antialiased bg-slate-100 dark:bg-slate-900 text-slate-600 dark:text-slate-400">
    <div class="flex h-[100dvh] overflow-hidden">
        <div class="relative flex flex-col flex-1 overflow-y-auto overflow-x-hidden">
            <main class="grow">
                <div class="px-4 sm:px-6 lg:px-8 py-8 w-full max-w-9xl mx-auto">
                    <div class="sm:flex sm:justify-between sm:items-center mb-5">
                        <div class="mb-4 sm:mb-0">
                            <h1 class="text-2xl md:text-3xl text-slate-800 dark:text-slate-100 font-bold">Vendas</h1>
                        </div>

                        <div class="grid grid-flow-col sm:auto-cols-max justify-start sm:justify-end gap-2">
                            <form asp-action="Search" method="post" class="relative">
                                <label for="action-search" class="sr-only">Search</label>
                                <input id="nome" name="nome" class="form-input pl-9 bg-white dark:bg-slate-800" type="search" placeholder="Pesquisar por nome" />
                                <button class="absolute inset-0 right-auto group" type="submit" aria-label="Search">
                                    <svg class="w-4 h-4 shrink-0 fill-current text-slate-400 dark:text-slate-500 group-hover:text-slate-500 dark:group-hover:text-slate-400 ml-3 mr-2" viewBox="0 0 16 16" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M7 14c-3.86 0-7-3.14-7-7s3.14-7 7-7 7 3.14 7 7-3.14 7-7 7zM7 2C4.243 2 2 4.243 2 7s2.243 5 5 5 5-2.243 5-5-2.243-5-5-5z" />
                                        <path d="M15.707 14.293L13.314 11.9a8.019 8.019 0 01-1.414 1.414l2.393 2.393a.997.997 0 001.414 0 .999.999 0 000-1.414z" />
                                    </svg>
                                </button>
                            </form>

                            
                            <a asp-action="Create" class="btn bg-orange-500 hover:bg-orange-600 text-white  rounded-lg w-56">
                                <svg class="w-4 h-4 fill-current opacity-50 shrink-0" viewBox="0 0 16 16">
                                    <path d="M15 7H9V1c0-.6-.4-1-1-1S7 .4 7 1v6H1c-.6 0-1 .4-1 1s.4 1 1 1h6v6c0 .6.4 1 1 1s1-.4 1-1V9h6c.6 0 1-.4 1-1s-.4-1-1-1z" />
                                </svg>
                                <span class="hidden xs:block ml-2">Novo Registro de Venda</span>
                            </a>

                        </div>

                    </div> 

                    <div class="border-t border-slate-200 dark:border-slate-700 mb-5"></div>

                    <div class="sm:flex sm:justify-end sm:items-center mb-5">                      
                        <div class="grid grid-flow-col sm:auto-cols-max justify-start sm:justify-end gap-2">
                            <a asp-controller="Clientes" asp-action="Create" class="btn bg-orange-800 hover:bg-orange-900 text-white  rounded-lg w-32">
                                <svg class="w-4 h-4 fill-current opacity-50 shrink-0" viewBox="0 0 16 16">
                                    <path d="M15 7H9V1c0-.6-.4-1-1-1S7 .4 7 1v6H1c-.6 0-1 .4-1 1s.4 1 1 1h6v6c0 .6.4 1 1 1s1-.4 1-1V9h6c.6 0 1-.4 1-1s-.4-1-1-1z" />
                                </svg>
                                <span class="hidden xs:block ml-2">Cliente</span>
                            </a>
                        </div>

                    </div> 

                    <div class="bg-white dark:bg-slate-800 shadow-lg rounded-sm border border-slate-200 dark:border-slate-700 mb-8">
                        <header class="px-5 py-4">
                            <h2 class="font-semibold text-slate-800 dark:text-slate-100">Vendas <span class="text-slate-400 dark:text-slate-500 font-medium">@total</span></h2>
                        </header>
                        <div x-data="{ modalDeletarOpen: false, modalVisualizarOpen: false, tableIndex: 0 }">
                            <div class="overflow-x-auto">
                                <table class="table-auto w-full dark:text-slate-300">
                                    <thead class="text-xs font-semibold uppercase text-slate-500 dark:text-slate-400 bg-slate-50 dark:bg-slate-900/20 border-t border-b border-slate-200 dark:border-slate-700">
                                        <tr>
                                            <th class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                                <div class="font-semibold text-left">Código</div>
                                            </th>
                                            <th class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                                <div class="font-semibold text-left">Cliente</div>
                                            </th>
                                            <th class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                                <div class="font-semibold text-left">Itens</div>
                                            </th>
                                            <th class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                                <div class="font-semibold text-left">Data</div>
                                            </th>
                                            <th class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                                <div class="font-semibold text-left">Hora</div>
                                            </th>
                                            <th class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                                <div class="font-semibold text-left">Valor</div>
                                            </th>
                                            <th class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                                <div class="font-semibold text-left">Ações</div>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody class="text-sm divide-y divide-slate-200 dark:divide-slate-700">
                                   
                                   @foreach (var item in Model) {
                                        <tr>
                                            <td class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                                    <div class="font-medium text-sky-500">@Html.DisplayFor(modelItem => item.Identificador)</div>
                                                
                                            </td>
                                            <td class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                                <div class="font-medium text-slate-800 dark:text-slate-100">@Html.DisplayFor(modelItem => item.Cliente)</div>
                                            </td>
                                                <td class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                                    <div class="font-medium text-slate-800 dark:text-slate-100">@Html.DisplayFor(modelItem => item.Itens)</div>
                                                </td>
                                                <td class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                                    <div class="font-medium text-slate-800 dark:text-slate-100">@Html.DisplayFor(modelItem => item.Data)</div>
                                                </td>
                                                <td class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                                    <div class="font-medium text-slate-800 dark:text-slate-100">@Html.DisplayFor(modelItem => item.Hora)</div>
                                                </td>
                                                <td class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                                    <div class="font-medium text-slate-800 dark:text-slate-100">R$ @Html.DisplayFor(modelItem => item.Valor)</div>
                                                </td>
                                                <td class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                                    @if(item.Cancelamento is null)
                                                    {
                                                        <div class="inline-flex font-medium bg-emerald-100 dark:bg-emerald-400/30 text-emerald-600 dark:text-emerald-400 rounded-full text-center px-2.5 py-0.5">Confirmada</div>
                                                    } 
                                                    else
                                                    {
                                                        <div class="inline-flex font-medium bg-rose-100 dark:bg-rose-400/30 text-rose-600 dark:text-rose-400 rounded-full text-center px-2.5 py-0.5">Cancelada</div>
                                                    }
                                                    
                                                </td>
                                             <td x-data="{ modalDeletarOpen: false, modalVisualizarOpen: false }" class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap w-px">
                                                <div  class="space-x-1">
                                                    <button class="text-slate-400 hover:text-slate-500 dark:text-slate-500 dark:hover:text-slate-400 rounded-full" @@click.prevent="modalVisualizarOpen = true; tableIndex = @item.Id">
                                                        <span class="sr-only">Visualizar</span>
                                                        <svg  class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                                            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m5.231 13.481L15 17.25m-4.5-15H5.625c-.621 0-1.125.504-1.125 1.125v16.5c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Zm3.75 11.625a2.625 2.625 0 1 1-5.25 0 2.625 2.625 0 0 1 5.25 0Z" />
                                                        </svg>                                                          
                                                    </button>
                                                    <div
                                                        class="fixed inset-0 bg-slate-900 bg-opacity-30 z-50 transition-opacity"
                                                        x-show="modalVisualizarOpen"
                                                        x-transition:enter="transition ease-out duration-200"
                                                        x-transition:enter-start="opacity-0"
                                                        x-transition:enter-end="opacity-100"
                                                        x-transition:leave="transition ease-out duration-100"
                                                        x-transition:leave-start="opacity-100"
                                                        x-transition:leave-end="opacity-0"
                                                        aria-hidden="true"
                                                        x-cloak
                                                    ></div>
                                                    <div
                                                        id="danger-modal"
                                                        class="fixed inset-0 z-50 overflow-hidden flex items-center my-4 justify-center px-4 sm:px-6"
                                                        role="dialog"
                                                        aria-modal="true"
                                                        x-show="modalVisualizarOpen"
                                                        x-transition:enter="transition ease-in-out duration-200"
                                                        x-transition:enter-start="opacity-0 translate-y-4"
                                                        x-transition:enter-end="opacity-100 translate-y-0"
                                                        x-transition:leave="transition ease-in-out duration-200"
                                                        x-transition:leave-start="opacity-100 translate-y-0"
                                                        x-transition:leave-end="opacity-0 translate-y-4"
                                                        x-cloak
                                                    >
                                                        <div class="bg-white dark:bg-slate-800 rounded shadow-lg overflow-auto max-w-lg w-full max-h-full" @@click.outside="modalVisualizarOpen = false" @@keydown.escape.window="modalVisualizarOpen = false">
                                                            <div class="p-5">
                                                                <div class="flex space-x-4">
                                                                    <div class="w-10 h-10 rounded-full flex items-center justify-center shrink-0 bg-orange-100 dark:bg-orange-500/30">
                                                                        <svg class="w-4 h-4 shrink-0 fill-current text-orange-500" viewBox="0 0 16 16">
                                                                            <path d="M8 0C3.6 0 0 3.6 0 8s3.6 8 8 8 8-3.6 8-8-3.6-8-8-8zm1 12H7V7h2v5zM8 6c-.6 0-1-.4-1-1s.4-1 1-1 1 .4 1 1-.4 1-1 1z" />
                                                                        </svg>
                                                                    </div>
                                                                    <div>
                                                                        <div class="mb-4">
                                                                            <div class="text-lg font-semibold text-slate-800 dark:text-slate-100">Visualizar venda</div>
                                                                        </div>
                                                                        <div class="mb-2">
                                                                            <p><strong>Código: </strong>@Html.DisplayFor(modelItem => item.Id)</p>
                                                                            <p><strong>Cliente: </strong> @Html.DisplayFor(modelItem => item.Cliente)</p>
                                                                            <p><strong>Total de produtos: </strong> @Html.DisplayFor(modelItem => item.Itens)</p>
                                                                            <p><strong>Data: </strong> R$ @Html.DisplayFor(modelItem => item.Data)</p>
                                                                            <p><strong>Hora: </strong> R$ @Html.DisplayFor(modelItem => item.Hora)</p>
                                                                            <p><strong>Valor: </strong> R$ @Html.DisplayFor(modelItem => item.Valor)</p>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div style="margin-bottom: 1rem;"></div>
                                                                <div style="border-top-width: 2px; margin-bottom: 1.5rem;" class="w-full border-t border-slate-800 dark:border-slate-700">       
                                                                    <div style="margin-bottom: 1rem;"></div>    
                                                                    <div class="bg-white dark:bg-slate-800 shadow-lg rounded-sm border border-slate-200 dark:border-slate-700 mb-8">
                                                                        <header class="px-5 py-4">
                                                                                <h2 class="font-semibold text-slate-800 dark:text-slate-100">Produtos <span class="text-slate-400 dark:text-slate-500 font-medium">@Html.DisplayFor(modelItem => item.Itens)</span></h2>
                                                                        </header>
                                                                            <div x-data="{ modalDeletarOpen: false, modalVisualizarOpen: false, tableIndex: 0 }">
                                                                                <div class="overflow-x-auto">
                                                                                <table class="table-auto w-full dark:text-slate-300">
                                                                                    <thead class="text-xs font-semibold uppercase text-slate-500 dark:text-slate-400 bg-slate-50 dark:bg-slate-900/20 border-t border-b border-slate-200 dark:border-slate-700">
                                                                                        <tr>
                                                                                            <th class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                                                                                <div class="font-semibold text-left">Nome</div>
                                                                                            </th>
                                                                                            <th class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                                                                                <div class="font-semibold text-left">Qtd.</div>
                                                                                            </th>
                                                                                            <th class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                                                                                <div class="font-semibold text-left">Preço</div>
                                                                                            </th>
                                                                                                <th class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                                                                                    <div class="font-semibold text-left">Total</div>
                                                                                                </th>
                                                                                        </tr>
                                                                                    </thead>
                                                                                    <tbody class="text-sm divide-y divide-slate-200 dark:divide-slate-700">
                                                                                        @foreach (var produto in item.Produtos) {
                                                                                            <tr>
                                                                                                <td class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                                                                                        <div class="truncate max-w-60ch font-medium text-slate-800 dark:text-slate-100">@Html.DisplayFor(modelItem => produto.Nome)</div>
                                                                                                </td>
                                                                                                <td class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                                                                                        <div class="font-medium text-slate-800 dark:text-slate-100">@Html.DisplayFor(modelItem => produto.Quantidade)</div>
                                                                                                </td>
                                                                                                <td class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                                                                                        <div class="font-medium text-slate-800 dark:text-slate-100">R$ @Html.DisplayFor(modelItem => produto.Preco)</div>
                                                                                                </td>
                                                                                                    <td class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                                                                                        <div class="font-medium text-slate-800 dark:text-slate-100">R$ @Html.DisplayFor(modelItem => produto.ValorTotal)</div>
                                                                                                    </td>
                                                                                            </tr>
                                                                                        }
                                                                                    </tbody>
                                                                                </table>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div>
                                                                    <div class="flex flex-wrap justify-end space-x-2">
                                                                        <button class="btn-sm bg-orange-500 hover:bg-orange-600 text-white" @@click="modalVisualizarOpen = false">Sair</button>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <button class="text-rose-500 hover:text-rose-600 rounded-full" @@click.prevent="modalDeletarOpen = true; tableIndex = @item.Id">
                                                        <span class="sr-only">Deletar</span>
                                                        <svg class="w-8 h-8 fill-current" viewBox="0 0 32 32">
                                                            <path d="M13 15h2v6h-2zM17 15h2v6h-2z" />
                                                            <path d="M20 9c0-.6-.4-1-1-1h-6c-.6 0-1 .4-1 1v2H8v2h1v10c0 .6.4 1 1 1h12c.6 0 1-.4 1-1V13h1v-2h-4V9zm-6 1h4v1h-4v-1zm7 3v9H11v-9h10z" />
                                                        </svg>
                                                    </button>
                                                     <div
                                                        class="fixed inset-0 bg-slate-900 bg-opacity-30 z-50 transition-opacity"
                                                        x-show="modalDeletarOpen"
                                                        x-transition:enter="transition ease-out duration-200"
                                                        x-transition:enter-start="opacity-0"
                                                        x-transition:enter-end="opacity-100"
                                                        x-transition:leave="transition ease-out duration-100"
                                                        x-transition:leave-start="opacity-100"
                                                        x-transition:leave-end="opacity-0"
                                                        aria-hidden="true"
                                                        x-cloak
                                                    ></div>
                                                    <div
                                                        id="danger-modal"
                                                        class="fixed inset-0 z-50 overflow-hidden flex items-center my-4 justify-center px-4 sm:px-6"
                                                        role="dialog"
                                                        aria-modal="true"
                                                        x-show="modalDeletarOpen"
                                                        x-transition:enter="transition ease-in-out duration-200"
                                                        x-transition:enter-start="opacity-0 translate-y-4"
                                                        x-transition:enter-end="opacity-100 translate-y-0"
                                                        x-transition:leave="transition ease-in-out duration-200"
                                                        x-transition:leave-start="opacity-100 translate-y-0"
                                                        x-transition:leave-end="opacity-0 translate-y-4"
                                                        x-cloak
                                                    >
                                                        <div class="bg-white dark:bg-slate-800 rounded shadow-lg overflow-auto max-w-lg w-full max-h-full" @@click.outside="modalDeletarOpen = false" @@keydown.escape.window="modalDeletarOpen = false">
                                                            <div class="p-5">
                                                                <div class="flex space-x-4">
                                                                    <div class="w-10 h-10 rounded-full flex items-center justify-center shrink-0 bg-rose-100 dark:bg-rose-500/30">
                                                                        <svg class="w-4 h-4 shrink-0 fill-current text-rose-500" viewBox="0 0 16 16">
                                                                            <path d="M8 0C3.6 0 0 3.6 0 8s3.6 8 8 8 8-3.6 8-8-3.6-8-8-8zm0 12c-.6 0-1-.4-1-1s.4-1 1-1 1 .4 1 1-.4 1-1 1zm1-3H7V4h2v5z" />
                                                                        </svg>
                                                                    </div>
                                                                    <div>
                                                                        <div class="mb-2">
                                                                            <div class="text-lg font-semibold text-slate-800 dark:text-slate-100">Cancelar venda</div>
                                                                        </div>
                                                                        <div class="mb-2">
                                                                            <p>Deseja cancelar o registro de venda <strong>@Html.DisplayFor(modelItem => item.Id)</strong> ?</p>
                                                                            <p><strong>Essa ação é irreversível.</strong></p>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div>
                                                                    <div class="flex flex-wrap justify-end space-x-2">
                                                                        <button class="btn-sm border-slate-200 dark:border-slate-700 hover:border-slate-300 dark:hover:border-slate-600 text-slate-600 dark:text-slate-300" @@click="modalDeletarOpen = false">Sair</button>
                                                                        <form asp-action="Delete">
                                                                            <input type="hidden" name="id" id="id" value="@item.Id" />
                                                                                <input value="Cancelar" type="submit" class="btn-sm bg-rose-500 hover:bg-rose-600 text-white" />
                                                                        </form>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</body>
<style>
    .max-w-60ch {
        max-width: 40ch;
    }

    .max-w-40ch {
        max-width: 40ch;
    }

    .max-w-20ch {
        max-width: 20ch;
    }

    .truncate {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
</style>
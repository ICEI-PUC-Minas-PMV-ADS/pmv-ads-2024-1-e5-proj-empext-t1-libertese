@model Libertese.ViewModels.PrecificacaoCreateViewModel
@using Microsoft.AspNetCore.Mvc.TagHelpers


<div class="px-4 sm:px-6 lg:px-8 py-8 w-full max-w-9xl mx-auto">
    <div class="mb-1">
        <h4 class="text-xl md:text-xl text-slate-800 dark:text-slate-100 font-bold">Custos Fixos</h4>
    </div>
    <div class="border-t border-slate-200 dark:border-slate-700">
        <div class="space-y-8 mt-5">
            <div>
                <div class="grid gap-5 md:grid-cols-2 mb-10">
                    <div>
                        <div>
                            <div class="flex items-center justify-between">
                                <label asp-for="DespesaCompetencia" class="block text-sm font-medium mb-1" for="tooltip"></label>
                                <div class="relative ml-2"
                                     x-data="{ open: false }"
                                     @@mouseenter="open = true"
                                     @@mouseleave="open = false">
                                    <button class="block"
                                            aria-haspopup="true"
                                            :aria-expanded="open"
                                            @@focus="open = true"
                                            @@focusout="open = false"
                                            @@click.prevent>
                                        <svg class="w-4 h-4 fill-current text-slate-400 dark:text-slate-500" viewBox="0 0 16 16">
                                            <path d="M8 0C3.6 0 0 3.6 0 8s3.6 8 8 8 8-3.6 8-8-3.6-8-8-8zm0 12c-.6 0-1-.4-1-1s.4-1 1-1 1 .4 1 1-.4 1-1 1zm1-3H7V4h2v5z" />
                                        </svg>
                                    </button>
                                    <div class="z-10 absolute bottom-full left-1/2 -translate-x-1/2">
                                        <div class="min-w-60 bg-slate-800 text-slate-200 px-2 py-1 rounded overflow-hidden mb-2"
                                             x-show="open"
                                             x-transition:enter="transition ease-out duration-200 transform"
                                             x-transition:enter-start="opacity-0 translate-y-2"
                                             x-transition:enter-end="opacity-100 translate-y-0"
                                             x-transition:leave="transition ease-out duration-200"
                                             x-transition:leave-start="opacity-100"
                                             x-transition:leave-end="opacity-0"
                                             x-cloak>
                                            <div class="text-sm">Escolha o mês de competência em que a despesa foi lançada.</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <input class="form-input w-full" asp-for="DespesaCompetencia" type="month" />
                        </div>
                    </div>
                    <div>
                        <div>
                            <div class="flex items-center justify-start">
                                <label asp-for="DespesaId" class="block text-sm font-medium mb-1" for="tooltip"></label>
                                <div></div>
                                <div></div>
                                <div class="relative ml-2"
                                     x-data="{ open: false }"
                                     @@mouseenter="open = true"
                                     @@mouseleave="open = false">
                                    <button class="block"
                                            aria-haspopup="true"
                                            :aria-expanded="open"
                                            @@focus="open = true"
                                            @@focusout="open = false"
                                            @@click.prevent>
                                        <svg class="w-4 h-4 fill-current text-slate-400 dark:text-slate-500" viewBox="0 0 16 16">
                                            <path d="M8 0C3.6 0 0 3.6 0 8s3.6 8 8 8 8-3.6 8-8-3.6-8-8-8zm0 12c-.6 0-1-.4-1-1s.4-1 1-1 1 .4 1 1-.4 1-1 1zm1-3H7V4h2v5z" />
                                        </svg>
                                    </button>
                                    <div class="z-10 absolute bottom-full left-1/2 -translate-x-1/2">
                                        <div class="min-w-60 bg-slate-800 text-slate-200 px-2 py-1 rounded overflow-hidden mb-2"
                                             x-show="open"
                                             x-transition:enter="transition ease-out duration-200 transform"
                                             x-transition:enter-start="opacity-0 translate-y-2"
                                             x-transition:enter-end="opacity-100 translate-y-0"
                                             x-transition:leave="transition ease-out duration-200"
                                             x-transition:leave-start="opacity-100"
                                             x-transition:leave-end="opacity-0"
                                             x-cloak>
                                            <div class="text-sm">Escolha a despesa que deseja compor os custos fixos da precificação dos produtos e clique em incluir.</div>
                                        </div>
                                    </div>
                                </div>
                                <div></div>
                            </div>
                            <input style="display: none;" name="DespesaId" id="DespesaId" />
                            <input style="display: none;" name="DespesaNome" id="DespesaNome" />
                            <input style="display: none;" name="DespesaValor" id="DespesaValor" />
                            <input style="display: none;" name="Despesa" id="Despesa" />
                            <input style="display: none;" asp-for="DespesasJson" />
                            <div class="flex items-center space-x-5">
                                <input class="form-input w-full" type="text" id="SearchDespesa" />
                                <button id="addDespesa" class="btn bg-orange-800 hover:bg-orange-900 text-white rounded-lg w-32">
                                    <svg class="w-4 h-4 fill-current opacity-50 shrink-0" viewBox="0 0 16 16">
                                        <path d="M15 7H9V1c0-.6-.4-1-1-1S7 .4 7 1v6H1c-.6 0-1 .4-1 1s.4 1 1 1h6v6c0 .6.4 1 1 1s1-.4 1-1V9h6c.6 0 1-.4 1-1s-.4-1-1-1z" />
                                    </svg>
                                    <span class="hidden xs:block ml-2">Incluir</span>
                                </button>
                            </div>
                            <span asp-validation-for="DespesaId" class="text-xs mt-1 text-rose-500"></span>

                        </div>
                    </div>
                </div>

                <div class="bg-white dark:bg-slate-800 shadow-lg rounded-sm border border-slate-200 dark:border-slate-700 mb-0">
                    <header class="px-5 py-4">
                        <h2 class="font-semibold text-slate-800 dark:text-slate-100">Despesas <span name="TotalDeDespesas"  id="TotalDeDespesas" class="text-slate-400 dark:text-slate-500 font-medium">@Model.Despesas.Count()</span></h2>
                    </header>
                    <div x-data="{ modalDeletarOpen: false, modalVisualizarOpen: false, tableIndex: 0 }">
                        <div class="overflow-x-auto">
                            <table id="despesasTable" class="table-auto w-full dark:text-slate-300">
                                <thead class="text-xs font-semibold uppercase text-slate-500 dark:text-slate-400 bg-slate-50 dark:bg-slate-900/20 border-t border-b border-slate-200 dark:border-slate-700">
                                    <tr>
                                        <th class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                            <div class="font-semibold text-left">Código</div>
                                        </th>
                                        <th class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                            <div class="font-semibold text-left">Nome</div>
                                        </th>
                                        <th class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                            <div class="font-semibold text-left">Valor</div>
                                        </th>
                                        <th class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                            <div class="font-semibold text-left">Ações</div>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="text-sm divide-y divide-slate-200 dark:divide-slate-700">
                                    @for (var i = 0; i < Model.Despesas.Count; i++)
                                    {
                                        <tr>
                                            <td class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap"><div class="font-medium text-sky-500">@Model.Despesas[i].Id</div></td>
                                            <td class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap"><div class="font-medium text-slate-800 dark:text-slate-100">@Model.Despesas[i].Nome</div></td>
                                            <td class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap"><div class="font-medium text-slate-800 dark:text-slate-100">R$ @Model.Despesas[i].Valor</div></td>
                                            <td x-data="{ modalDeletarOpen: false, modalVisualizarOpen: false }" class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap w-px">
                                                <div class="space-x-1">
                                                    <button type="button" class="removeDespesa text-rose-500 hover:text-rose-600 rounded-full">
                                                        <span class="sr-only">Deletar</span>
                                                        <svg class="w-8 h-8 fill-current" viewBox="0 0 32 32">
                                                            <path d="M13 15h2v6h-2zM17 15h2v6h-2z" />
                                                            <path d="M20 9c0-.6-.4-1-1-1h-6c-.6 0-1 .4-1 1v2H8v2h1v10c0 .6.4 1 1 1h12c.6 0 1-.4 1-1V13h1v-2h-4V9zm-6 1h4v1h-4v-1zm7 3v9H11v-9h10z" />
                                                        </svg>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Despesas" class="text-xs mt-1 text-rose-500"></span>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $("#SearchDespesa").autocomplete({
        source: function (request, response) {
            $.ajax({
                url: '@Url.Action("SearchPrecificacaoByText", "Despesas")',
                dataType: "json",
                data: { 
                    searchString: $("#SearchDespesa").val(),
                    despesaCompetencia: $("#DespesaCompetencia").val()
                },
                success: function (data) {
                    response($.map(data, function (item) {
                        return { label: `${item.id} - ${item.nome}`, value: item, };
                    }))
                },
                error: function (xhr, status, error) {
                    alert("Erro ao buscar despesas, insira uma despesa valida!");
                }
            })
        },
        select: function (event, ui) {
            $("#SearchDespesa").val(ui.item.label);
            $("#DespesaId").val(ui.item.value.id);
            $("#DespesaNome").val(ui.item.value.nome);
            $("#DespesaValor").val(ui.item.value.valor);
            $("#Despesa").val(ui.item.value);
            console.log(ui.item.value)
            return false;
        }
    })

    $(document).ready(function () {
        $("#addDespesa").click(function () {
            var searchDespesa = $("#SearchDespesa").val();
            var despesaId = $("#DespesaId").val();
            var nome = $("#DespesaNome").val();
            var valor = $("#DespesaValor").val();
            var despesa = $("#Despesa").val();


            var despesaIdExistente = false;
            $("#despesasTable tbody tr").each(function () {
                var idExistente = $(this).attr("id");
                if (idExistente === despesaId) {
                    despesaIdExistente = true;
                    return false;
                }
            });

            if (despesaIdExistente) {
                alert("Por favor, escolha outra despesa a mesma já existe na lista.");

            } else if (despesaId && nome && valor) {


                var rowCount = $("#despesasTable tbody tr").length;

                var newRow = `

                                                                               <tr id="${despesaId}">
                                                                        <td class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                                                                            <div class="font-medium text-sky-500">${despesaId}</div>

                                                                        </td>
                                                                        <td class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                                                                            <div class="truncate max-w-80ch font-medium text-slate-800 dark:text-slate-100">${nome}</div>
                                                                        </td>
                                                                        <td class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap">
                                                                                            <div class="font-medium text-slate-800 dark:text-slate-100">R$ ${valor}</div>
                                                                        </td>
                                                                        <td x-data="{ modalDeletarOpen: false, modalVisualizarOpen: false }" class="px-2 first:pl-5 last:pr-5 py-3 whitespace-nowrap w-px">
                                                                            <div class="space-x-1">
                                                                                        <button type="button" class="removeDespesa text-rose-500 hover:text-rose-600 rounded-full">
                                                                                    <span class="sr-only">Deletar</span>
                                                                                    <svg class="w-8 h-8 fill-current" viewBox="0 0 32 32">
                                                                                        <path d="M13 15h2v6h-2zM17 15h2v6h-2z" />
                                                                                        <path d="M20 9c0-.6-.4-1-1-1h-6c-.6 0-1 .4-1 1v2H8v2h1v10c0 .6.4 1 1 1h12c.6 0 1-.4 1-1V13h1v-2h-4V9zm-6 1h4v1h-4v-1zm7 3v9H11v-9h10z" />
                                                                                    </svg>
                                                                                </button>
                                                                            </div>
                                                                        </td>
                                                                                                                    <input type="hidden" name="Despesas[${rowCount}].Id" value="${despesaId} />
                                                                                                                        <input type="hidden" name="Despesas[${rowCount}].Nome" value="${nome} />
                                                                                                                        <input type="hidden" name="Despesas[${rowCount}].Quantidade" value="${valor} />

                                                                    </tr>`;
                $("#despesasTable tbody").append(newRow);

                $("#despesaId").val('');
                $("#SearchDespesa").val('');
                $("#DespesaNome").val('');
                $("#DespesaValor").val('');
                $("#Despesa").val('');

                var rows = $("#despesasTable tbody tr");
                var despesas = [];

                for (var i = 0; i < rows.length; i++) {
                    var cells = rows[i].getElementsByTagName('td');
                    var despesa = {
                        Id: cells[0].innerText,
                        Nome: cells[1].innerText,
                        Valor: cells[2].innerText.replace('R$ ', '')
                    };
                    despesas.push(despesa);
                }

                $("#TotalDeDespesas").text(despesas.length)
                $("#DespesasJson").val(JSON.stringify(despesas));

            } else {
                alert("Por favor, escolha uma data de competência e uma despesa que deseja incluir na precificação.");
            }
        });


        $("#despesasTable").on("click", ".removeDespesa", function () {
            $(this).closest("tr").remove();
            $("#despesasTable tbody tr").each(function (index, tr) {
                $(tr).find("input[name^='Despesas']").each(function () {
                    var name = $(this).attr("name");
                    var newName = name.replace(/\[\d+\]/, `[${index}]`);
                    $(this).attr("name", newName);
                });
            });

            var despesasJson = $("#DespesasJson").val()
            var indexToRemove = $(this).closest("tr").index();
            var despesasList = JSON.parse(despesasJson);
            despesasList.splice(indexToRemove, 1);
            $("#TotalDeDespesas").text(despesasList.length);
            despesasJson = JSON.stringify(despesasList);
            $("#DespesasJson").val(despesasJson);
        });
    });


</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@model Libertese.Domain.Entities.Financeiro.ContaBancaria

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutProdutos.cshtml";
}

<body class="font-inter antialiased bg-slate-100 dark:bg-slate-900 text-slate-600 dark:text-slate-400">
    <div class="flex min-h-[100dvh]  overflow-hidden">
        <div class="relative flex flex-col flex-1 overflow-y-auto overflow-x-hidden bg-white dark:bg-slate-900">
            <main class="grow">
                <div class="px-4 sm:px-6 lg:px-8 py-8 w-full max-w-9xl mx-auto">
                    <div class="mb-8">
                        <div class="flex items-center justify-between">
                            <h2 class="text-2xl md:text-3xl text-slate-800 dark:text-slate-100 font-bold">Excluir Conta Bancária</h2>
                            <a asp-action="Index" class="btn bg-orange-500 hover:bg-orange-600 text-white ml-3 rounded-lg w-24">Voltar</a>
                        </div>
                    </div>
                    <div class="border-t border-slate-200 dark:border-slate-700">
                        <div class="space-y-8 mt-5">
                            <div class="text-lg text-slate-800 dark:text-slate-100">Você tem certeza que gostaria de excluir este item?</div>
                            <dl class="grid gap-5 md:grid-cols-2 mt-4">
                                <div>
                                    <dt class="block text-sm font-medium text-slate-800 dark:text-slate-100">@Html.DisplayNameFor(model => model.Nome)</dt>
                                    <dd class="mt-1 text-sm text-slate-600 dark:text-slate-400">@Html.DisplayFor(model => model.Nome)</dd>
                                </div>
                                <div>
                                    <dt class="block text-sm font-medium text-slate-800 dark:text-slate-100">@Html.DisplayNameFor(model => model.Agencia)</dt>
                                    <dd class="mt-1 text-sm text-slate-600 dark:text-slate-400">@Html.DisplayFor(model => model.Agencia)</dd>
                                </div>
                                <div>
                                    <dt class="block text-sm font-medium text-slate-800 dark:text-slate-100">@Html.DisplayNameFor(model => model.Conta)</dt>
                                    <dd class="mt-1 text-sm text-slate-600 dark:text-slate-400">@Html.DisplayFor(model => model.Conta)</dd>
                                </div>
                                <div>
                                    <dt class="block text-sm font-medium text-slate-800 dark:text-slate-100">@Html.DisplayNameFor(model => model.Pix)</dt>
                                    <dd class="mt-1 text-sm text-slate-600 dark:text-slate-400">@Html.DisplayFor(model => model.Pix)</dd>
                                </div>
                                <div>
                                    <dt class="block text-sm font-medium text-slate-800 dark:text-slate-100">@Html.DisplayNameFor(model => model.DataCriacao)</dt>
                                    <dd class="mt-1 text-sm text-slate-600 dark:text-slate-400">@Html.DisplayFor(model => model.DataCriacao)</dd>
                                </div>
                                <div>
                                    <dt class="block text-sm font-medium text-slate-800 dark:text-slate-100">@Html.DisplayNameFor(model => model.DataAtualizacao)</dt>
                                    <dd class="mt-1 text-sm text-slate-600 dark:text-slate-400">@Html.DisplayFor(model => model.DataAtualizacao)</dd>
                                </div>
                            </dl>
                            <footer>
                                <div class="flex flex-col px-6 py-5 border-t border-slate-200 dark:border-slate-700">
                                    <form asp-action="Delete">
                                        <input type="hidden" asp-for="Id" />
                                        <div class="flex self-center">
                                            <button id="submitForm" name="submitForm" type="submit" class="btn bg-slate-900 hover:bg-orange-600 text-white ml-3 rounded-lg w-32">Excluir</button>
                                        </div>
                                    </form>
                                </div>
                            </footer>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
          rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
    <meta charset="UTF-8">
    <title>Libertese | Login</title>
    <style>
        form {
            padding: auto;
            width: 300px;
            display: flex;
            flex-direction: column;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .login{
            font-family: "Montserrat", sans-serif;
            font-weight: 500;
            font-size: 14px;
        }

        .logo img {
            width: 100%;
        }

        label {
            width: 100%;
            display: block;
            margin-bottom: 5px;
            font-family: "Montserrat", sans-serif;
            font-weight: 500;
            font-size: 14px;
        }

        input[type="text"],
        input[type="email"],
        input[type="password"],
        button {
            width: 100%;
            padding: 12px;
            box-sizing: border-box;
            border-radius: 8px;
            font-family: "Montserrat", sans-serif;
            font-size: 14px;
        }

        input[type="text"],
        input[type="email"],
        input[type="password"] {
            padding-left: 45px;
        }

        input.invalid {
            border-color: crimson;
            box-shadow: 0px 0px 0px crimson;
        }

        .icon {
            display: inline-flex;
            align-items: center;
            width: 100%;
            margin-bottom: 10px;
        }

            .icon.email {
                position: absolute;
                color: #000;
            }

            .icon.senha {
                position: absolute;
                color: #000;
            }

        span {
            color: crimson;
            display: block;
            margin-top: 5px;
            font-family: "Montserrat", sans-serif;
            font-weight: 500;
            font-size: 14px;
        }


        .registrese {
            font-family: "Montserrat", sans-serif;
            font-weight: 500;
            font-style: normal;
            font-size: 20px;
        }

        button {
            background-color: #000;
            color: #fff;
            border: none;
            cursor: pointer;
            border-radius: 8px;
            transition: background-color 0.5s ease;
        }

            button:hover {
                background-color: #4F4F4F;
            }

        .link {
            text-align: center;
            font-family: "Montserrat", sans-serif;
            font-weight: 500;
            font-size: 14px;
        }

        a {
            color: inherit;
            transition: color 0.3s ease;
        }

            a:hover {
                color: #4F4F4F;
            }
    </style>
</head>

<body>



    <form id="loginForm">

        <div class="logo">
            <img src="~/images/Logo principal.png" alt="">
            <br />
        </div>

        <div class="container">
            <div class="login">
                <h2>Login</h2>
                <br />
            </div>

            <div class="form-group">
                <label for="email"> E-mail </label>
                <div class="icon email" style="
                    display: inline-flex;
                    align-items: center;
                    width: 100%
                ">               
                    <i class="fa-regular fa-envelope" style="
                    position: absolute;
                    padding-left: 15px;
                    "></i>
                    <input type="email" oninput="validarEmail(this)" onfocus="redefinirMsg()"
                           placeholder="Example@something.com" id="email" required />
                </div>
                <br />
                <br />
                <span id="error-email"></span>
                <br />
                <label for="senha"> Senha </label>
                <div class="icon senha" style="
                     display: inline-flex;
                     align-items: center;
                     width: 100%">
                
                    <i class="fa-solid fa-lock" style="
                    position: absolute;
                    padding-left: 15px;
                    "></i>
                    <input type="password" placeholder="Digite sua senha" id="senha" required />
                </div>
                <br />
                <br />
                <br />
                <br />
                <div class="link">
                    <a asp-controller="Usuarios" asp-action="ResetPassword">Esqueceu a senha?</a>
                </div>
                <br />
                <br />
                <button type="button" onclick="autenticarUsuario()">Confirmar</button>
                <br />
                <br />
                <div class="link">
                    <a asp-controller="Home" asp-action="Registro">Não possui cadastro? Clique aqui</a>
                </div>
            </div>
        </div>
    </form>


</body>

</html>

<script>
    function autenticarUsuario() {
        var email = document.getElementById("email").value;
        var senha = document.getElementById("senha").value;

        // Aqui você pode adicionar mais validações se necessário

        var data = {
            Email: email,
            Senha: senha
        };

        fetch("/api/v1/user/login", {
            method: "POST",
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify(data)
        })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Credenciais inválidas');
                }
                
                const urlBase = window.location.protocol + "//" + window.location.host;
                window.location.href = urlBase;
            })
            .catch(error => {
                console.error('Erro:', error);
                alert('Erro ao tentar fazer login');
            });
    }
</script>
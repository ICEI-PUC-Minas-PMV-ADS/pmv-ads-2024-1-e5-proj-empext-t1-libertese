@model Libertese.Domain.Entities.Financeiro.Classificacao

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Libertese</title>
    <link rel="stylesheet" href="~/../sidebar/assets/css/styles.css" asp-append-version="true" />
    <link href="../scaffold/css/vendors/flatpickr.min.css" rel="stylesheet">
    <link href="../scaffold/style.css" rel="stylesheet">
    <style>
        svg:hover {
            cursor: pointer;
        }
    </style>
</head>

<body>
    <form asp-controller="Classificacoes" asp-action="Create" method="post" class="w-full sm:flex flex-col">
            <label asp-for="Descricao" class="form-label mb-6">Descrição da Classificação</label>
            <div class="input-group mb-3 flex flex-row">
                <input asp-for="Descricao" class="form-input pl-6 bg-white dark:bg-slate-800" style="width: 75%; margin-right: 100px" placeholder="Informe a Classificação" />
                <button type="submit">
                    <svg class="w-6 h-6 fill-current shrink-0" style="opacity: 1; transition: opacity 0.5s;" onmouseover="hoverEffect(this, true);" onmouseout="hoverEffect(this, false);" onclick="pulseEffect(this);">
                        <path d="M15 7H9V1c0-.6-.4-1-1-1S7 .4 7 1v6H1c-.6 0-1 .4-1 1s.4 1 1 1h6v6c0 .6.4 1 1 1s1-.4 1-1V9h6c.6 0 1-.4 1-1s-.4-1-1-1z" />
                    </svg>
                </button>
            </div>

        @if (ViewData["Tipo"] != null)
        {
            <input type="hidden" name="Tipo" value="@ViewData["Tipo"]" />
        }
    </form>
</body>
</html>

<script>
    function hoverEffect(svg, isHovering) {
        if (isHovering) {
            svg.style.opacity = '0.5';
        } else {
            svg.style.opacity = '1';
        }
    }

    function pulseEffect(svg) {
        svg.style.opacity = '0.8';
        setTimeout(() => {
            svg.style.opacity = '1';
        }, 500);
    }
</script>